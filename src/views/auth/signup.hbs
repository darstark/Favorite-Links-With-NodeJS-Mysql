<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Sign up</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="post">
            <div class="row">
              <div class="input-group pb-3">
                <input
                  type="text"
                  class="form-control"
                  name="fullname"
                  placeholder="Full Name"
                />
              </div>
              <div class="input-group pb-3">
                <input
                  type="text"
                  class="form-control"
                  name="username"
                  placeholder="Username"
                />
              </div>
              <div class="input-group pb-3">
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="Password"
                  id=""
                />
              </div>

              <div class="d-grid">
                <button type="" class="btn btn-success">Sign Up</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>