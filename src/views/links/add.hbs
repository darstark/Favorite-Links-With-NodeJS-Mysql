<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">

                     <div class="form-group pb-3">
                        <input type="text" class="form-control" name="title" placeholder="title" autofocus>
                     </div>       

                      <div class="form-group pb-3">
                          <input type="url" class="form-control" name="url" placeholder="url">
                      </div>  
                      <div class="form-group pb-3">
                         <textarea name="description" class="form-control" placeholder="description" rows="2"></textarea>
                      </div>
                      <div class="d-grid">
                          <button  class="btn btn-success">Save</button>
                      </div>
                    </form>
                 </div>
            </div>
        </div>
    </div>
</div>